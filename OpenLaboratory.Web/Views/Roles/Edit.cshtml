@model OpenLaboratory.Web.ViewModels.RoleEditViewModel

@{
    ViewData["Title"] = "编辑角色";
}

<h1>编辑</h1>
<h4>角色</h4>
<hr />
<h4>修改角色名称</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">返回角色列表</a>
            </div>
        </form>
    </div>
</div>
<hr/>
<h4>角色用户列表</h4>
<p>
    <a asp-action="AddUserToRole" asp-route-roleId="@Model.Id" class="btn btn-primary">添加用户</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th>
            学号
        </th>
        <th>
            姓名
        </th>
        <th>
            删除
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Users) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Key)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                <form asp-action="RemoveUserFromRole" asp-route-roleId="@Model.Id" asp-route-userName="@item" method="post">
                    <button type="submit" class="btn btn-danger"
                            onclick="return  confirm('确认删除?')">
                        删除
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}