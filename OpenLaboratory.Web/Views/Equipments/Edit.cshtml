@model OpenLaboratory.Web.Models.Equipment

@{
    ViewData["Title"] = "编辑设备";
}

<h1>编辑</h1>
<h4>设备</h4>
<hr />
<h4>修改设备信息</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaboratoryId" class="control-label"></label>
                <select asp-for="LaboratoryId" class="form-control" asp-items="ViewBag.LaboratoryId"></select>
                <span asp-validation-for="LaboratoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Statu" class="control-label"></label>
                <select asp-for="Statu" class="form-control">
                    <option value="0">可预约</option>
                    <option value="1">被占用</option>
                    <option value="2">维护中</option>
                </select>
                <span asp-validation-for="Statu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">返回设备列表</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
