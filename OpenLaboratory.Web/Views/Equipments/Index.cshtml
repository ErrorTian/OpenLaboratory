@model IEnumerable<OpenLaboratory.Web.Models.Equipment>

@{
    ViewData["Title"] = "设备列表";
}

<h1>设备列表</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">创建新的设备</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                名称
            </th>
            <th>
                实验室
            </th>
            <th>
                状态
            </th>
            <th>
                编辑
            </th>
            <th>
                详情
            </th>
            <th>
                删除
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Laboratory.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statu)
            </td>
            <td> 
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">编辑</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">详情</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">删除</a>
            </td>
        </tr>
}
    </tbody>
</table>
